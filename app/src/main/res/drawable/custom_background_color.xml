<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#8A32A9"
                android:endColor="#8A00FF"
                android:angle="45"/>

            <stroke
                android:width="1dp"
                android:color="#1FFFFFFF" />
            <corners android:radius="8dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>

</selector>
